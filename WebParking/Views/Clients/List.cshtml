@model List<WebParking.Domain.Client>

@{
    ViewData["Title"] = "Клиенты";
}

@section Styles {
    <link id="datatable-lang" href="~/lib/datatables/Russian.json" />
}

<div class="row">
    <div class="col-12">
        <a type="button" class="btn btn-primary float-right mb-3" href="/Clients/Create">Создать нового клиента</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table id="myTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Телефон</th>
                    <th>Дата рождения</th>
                    <th>Паспортные данные</th>
                    <th>Примечания</th>
                    <th>Создан</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var elem in Model)
                {
                    <tr>
                        <td>@elem.FirstName</td>
                        <td>@elem.LastName</td>
                        <td>@elem.Telephone</td>
                        <td>@elem.DateOfBirth.ToString("dd.MM.yyyy")</td>
                        <td>@elem.Document</td>
                        <td>@elem.Notes</td>
                        <td>@elem.Creation</td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    url: $("#datatable-lang").attr("href")
                },
            });
        });
    </script>
}

