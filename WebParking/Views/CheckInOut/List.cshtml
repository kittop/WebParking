@model List<WebParking.Domain.Models.CheckInOut>

@{
    ViewData["Title"] = "Аренда";
}

@section Styles {
    <link id="datatable-lang" href="~/lib/datatables/Russian.json" />
}

<div class="row">
    <div class="col-12">
        <a type="button" class="btn btn-primary float-right mb-3" href="/Check/Create">Открыть аренду</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table id="myTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Событие</th>
                    <th>Клиент</th>
                    <th>Транспортное средство</th>
                    <th>Тариф</th>
                    <th>Парковочное место</th>
                    <th>Дата заезда</th>
                    <th>Дата выезда</th>
                    <th>Время стоянки</th>
                    <th>Стоимость</th>
                    <th>Примечания</th>
                    <th>Ответственный</th>
                    <th>Создан</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var elem in Model)
                {
                <tr>
                    <td>@CheckInOutController.CheckTypesDesc[elem.CheckType]</td>
                    <td>@elem.Client.FullName</td>
                    <td>@elem.Car.Mark</td>
                    <td>@elem.Tariff.Name</td>
                    <td>@elem.ParkingPlace.Name</td>
                    <td>@elem.DateCheckIn.ToString("dd.MM.yyyy")</td>
                    <td>@elem.DateCheckOut.ToString("dd.MM.yyyy")</td>
                    <td>@elem.TotalHours.ToString()</td>
                    <td>@elem.Sum.ToString()</td>
                    <td>@elem.Notes</td>
                    <td>@elem.Responsible.FullName</td>
                    <td>@elem.Creation</td>
                    <td>
                        <a role="button" class="btn btn-primary" asp-controller="Check" asp-action="Edit" asp-route-id="@elem.Id"><i class="fas fa-edit"></i></a>
                        <button onclick="deleteConfirm(@elem.Id, '@($"{elem.Client.LastName} {elem.Client.FirstName} {elem.Client.MiddleName}")')" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@section Scripts{
    <script>
        function deleteConfirm(id, name) {

            var isConfirmed = confirm(`Вы действительно хотите удалить клиента ${name}`);

            if (isConfirmed) {
                $.post('@Url.Action("Delete", "Clients")', { id }, function (result) {
                    console.log(result)
                    document.location.reload();
                })

            }

        }
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    url: $("#datatable-lang").attr("href")
                },
            });
        });
    </script>
}

