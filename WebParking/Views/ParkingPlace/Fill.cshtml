@model WebParking.ViewModels.ParkingPlaceFillViewModel

@{
    ViewData["Title"] = "Заполнение парковочных мест";
}

@using (Html.BeginForm("FillPost", "ParkingPlace"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Start, "Точка отсчёта (число)")
        <input type="number" id="Start" class="form-group form-control" name="Start" min="1" max="999">
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Count, "Количество (от 1 до 999)")
        <input type="number" id="Count" class="form-group form-control" name="Count" min="1" max="999">
    </div>

    <input type="submit" value="Заполнить" class="btn btn-primary" />
}
